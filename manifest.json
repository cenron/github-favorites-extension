{
  "manifest_version": 3,
  "name": "GitHub Favorites",
  "description": "Keep track of your favorite GitHub repositories with a single click",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "index.js"
      ],
      "matches": [
        "https://*.github.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["html/add-button.html"],
      "matches": ["https://*.github.com/*"]
    }
  ]
}